@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

.nomor
	width : 48px
	height : 48px
	margin : 10px 10px 10px 10px
	border : 1px solid black
	font-size : 32px
	text-align : center
	line-height : 48px

.board
	margin : 0px auto
	width : 560px
	height : 400px
	background : yellow

.botAns
	margin : 0px auto
	width : 460px
	height : 160px
	padding : 10px
	background : gray

.lans
	width : 400px
	height : 20px
	margin : 12.5px auto
	border : 1px solid blue
	background : #A9BA9D
	font-size : 16px
	font-weight : bold
	text-align : center
	line-height : 20px
	cursor : pointer

.lans.B
	font-size : 14px

.lans.C, .lans.D
	font-size : 12px

.ans
	width : 200px
	height : 50px
	margin : 10px
	border : 5px solid blue
	background : #A9BA9D
	font-size : 32px
	font-weight : bold
	text-align : center
	line-height : 45px
	cursor : pointer

.long.ans
	width : 200px
	height : 50px
	margin : 10px
	border : 5px solid blue
	background : #A9BA9D
	font-size : 16px
	font-weight : bold
	text-align : center
	line-height : 45px
	cursor : pointer

.ruby.ans
	width : 200px
	height : 50px
	margin : 10px
	border : 5px solid blue
	background : #A9BA9D
	font-size : 20px
	font-weight : bold
	text-align : center
	line-height : 45px
	cursor : pointer

.ruby.ans ruby
	position : relative
	top : 4px

.ans.A, .ans.C
	float : left

.ans.B, .ans.D
	float : right

.button
	width : 55px
	height : 55px
	float : left
	position : relative
	top : 0px
	cursor : pointer

.red 
	margin : 35px 5px 35px 25px
	background : #ff0000
	box-shadow : 0px 5px #800000

.orange
	margin : 35px 5px
	background : #ff8000
	box-shadow : 0px 5px #804000

.yellow
	margin : 35px 5px
	background : #ffff00
	box-shadow : 0px 5px #808000

.green
	margin : 35px 5px
	background : #008000
	box-shadow : 0px 5px #004000

.blue
	margin : 35px 5px
	background : #0000ff
	box-shadow : 0px 5px #000080

.purple
	margin : 35px 25px 35px 5px
	background : #800080
	box-shadow : 0px 5px #400040

.button:active
	box-shadow : 0px 0px
	top : 5px
	transition : all 0.25s ease-out

.correct
	width : 40px
	height : 40px
	margin : 10px 10px 10px 10px
	border : 1px solid black
	font-size : 30px
	color : green
	text-align : center
	line-height : 40px
	float : left

.wrong
	width : 40px
	height : 40px
	margin : 10px 10px 10px 10px
	border : 1px solid black
	font-size : 30px
	color : red
	text-align : center
	line-height : 40px
	float : right

.rectangle
	width : 560px
	height : 160px
	float : left

.squareXL
	width : 150px
	height : 150px
	margin : 5px 20px
	background : red
	float : left

.squareL
	width : 120px
	height : 120px
	margin : 15px 20px
	background : red
	float : left

.squareM
	width : 90px
	height : 90px
	margin : 30px 20px
	background : red
	float : left

.squareS
	width : 30px
	height : 30px
	margin : 60px 20px
	background : red
	float : left

.Vrectangle
	width : 220px
	height : 200px
	margin : 10px 30px
	padding : 7.5px 0px
	float : left

.Vrectangle .ans
	width : 200px
	height : 35px
	margin : 10px
	border : 5px solid blue
	background : #A9BA9D
	font-size : 18px
	font-weight : bold
	text-align : center
	line-height : 25px
	cursor : pointer

.Vimage
	width : 220px
	height : 200px
	margin : 10px 30px
	float : left

.teabag
	width : 53px
	height : 73px
	margin : 0px auto
	position : relative
	top : 50px
	background-image : url("../images/Teabag.png")

.fast
	width : 560px
	height : 270px

.loadingbar
	width : 510px
	height : 60px
	margin : 0px auto
	background : silver
	position : relative
	top : 50px

.bar 
	width : 490px
	height : 40px
	margin : 10px
	float : left

.block
	width : 40px
	height : 40px
	margin : 0px 5px
	background : #A0A0A0
	float : left

.first
	margin : 0px 5px 0px 0px

.last
	margin : 0px 0px 0px 5px