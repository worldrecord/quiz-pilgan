    script(src='build/build.js')
    script.
      var correct = 0
      var wrong = 0
      var g = 0
      var code = ""
      var clicked = -1
      function sLoad(Num) {
        g = Num;
        document.getElementsByClassName('correct')[g].innerHTML = correct
        document.getElementsByClassName('wrong')[g].innerHTML = wrong
      }
      var answers = ["O.K.", "Four", "0", "D", "5", "C", "0", "8", "42413", ""]
      var answered = [false, false, false, false, false, false, false, false, false, false]
      var ans = false
      function ansClick(Num) {
        ans = false
        if (!answered[0] && g == 0) {
          answered[0] = true
          if (Num == 4) { ans = true }
          else { ans = false }
          if(ans) { correct++ }
          else { wrong++ }
        }
        else if (!answered[1] && g == 1) {
          answered[1] = true
          if (Num == 1) { ans = true }
          else { ans = false }
          if(ans) { correct++ }
          else { wrong++ }
        }
        else if (!answered[2] && g == 2) {
          answered[2] = true
          if (Num == 0) { ans = true }
          else { ans = false }
          if(ans) { correct++ }
          else { wrong++ }
        }
        else if (!answered[3] && g == 3) {
          answered[3] = true
          if (Num == 4) { ans = true }
          else { ans = false }
          if(ans) { correct++ }
          else { wrong++ }
        }
        else if (!answered[4] && g == 4) {
          answered[4] = true
          if (Num == 0) { ans = true }
          else { ans = false }
          if(ans) { correct++ }
          else { wrong++ }
        }
        else if (!answered[5] && g == 5) {
          answered[5] = true
          if (Num == 3) { ans = true }
          else { ans = false }
          if(ans) { correct++ }
          else { wrong++ }
        }
        else if (!answered[6] && g == 6) {
          answered[6] = true
          if (Num == 0) { ans = true }
          else { ans = false }
          if(ans) { correct++ }
          else { wrong++ }
        }
        else if (!answered[7] && g == 7) {
          answered[7] = true
          if (Num == 1) { ans = true }
          else { ans = false }
          if(ans) { correct++ }
          else { wrong++ }
        }
        else if (!answered[8] && g == 8) {
          if (code.length < 4) {
            code += Num + ""
          }
          else {
            answered[8] = true
            code += Num + ""
            if (code == "53514") { ans = true }
            if(ans) { correct++ }
            else { wrong++ }
          }
        }
        else if (!answered[9] && g == 9) {
          if(clicked < 8){
            clicked++;
            document.getElementsByClassName('block')[clicked].style.backgroundColor = "royalblue";
          }
          else{
            clicked++;
            document.getElementsByClassName('block')[clicked].style.backgroundColor = "royalblue";
            ans = true
            if(ans) { correct++ }
            Show()
          }
        }
        document.getElementsByClassName('correct')[g].innerHTML = correct
        document.getElementsByClassName('wrong')[g].innerHTML = wrong
      }
      function Show() {
        document.getElementById("show").innerHTML = "Thanks for playing!"
      }
      document.getElementsByClassName('correct')[g].innerHTML = correct
      document.getElementsByClassName('wrong')[g].innerHTML = wrong